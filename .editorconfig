# EditorConfig helps maintain consistent coding styles across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Rust source files
[*.rs]
indent_size = 4
max_line_length = 100

# Cargo files
[Cargo.toml]
indent_size = 2

[Cargo.lock]
indent_size = 2
insert_final_newline = false

# Nix files
[*.nix]
indent_size = 2
max_line_length = 100

# YAML files (GitHub Actions)
[*.yml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# Configuration files
[{.editorconfig,.gitattributes,.gitignore}]
indent_size = 2
